{
  "extends": "@ssp/tsconfig/nextjs.json",
  "compilerOptions": {
    "strictNullChecks": true,
    "strict": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/public/*": ["./public/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/auth/src/next-auth.d.ts",
    "../Card.tsx"
  ],
  "exclude": ["node_modules"]
}
